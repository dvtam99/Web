<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>controller.authentication.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/au/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.authentication.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeauthenticationController</servlet-name>
        <servlet-class>controller.DeauthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>controller.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyServlet</servlet-name>
        <servlet-class>controller.Mua.MuaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditEServlet</servlet-name>
        <servlet-class>controller.Mua.EditEServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelServlet</servlet-name>
        <servlet-class>controller.Mua.DelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SupplierServlet</servlet-name>
        <servlet-class>controller.doitac.Doitac</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BanServlet</servlet-name>
        <servlet-class>controller.Ban.BanServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelBanServlet</servlet-name>
        <servlet-class>controller.Ban.DelServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditMbServlet</servlet-name>
        <servlet-class>controller.Ban.EditMbServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CaServlet</servlet-name>
        <servlet-class>controller.ca.CaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DelcaServlet</servlet-name>
        <servlet-class>controller.ca.DelcaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditcaServlet</servlet-name>
        <servlet-class>controller.ca.EditcaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeauthenticationController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyServlet</servlet-name>
        <url-pattern>/buy</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditEServlet</servlet-name>
        <url-pattern>/editE</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelServlet</servlet-name>
        <url-pattern>/delE</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SupplierServlet</servlet-name>
        <url-pattern>/doitac</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BanServlet</servlet-name>
        <url-pattern>/ban</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelBanServlet</servlet-name>
        <url-pattern>/delMb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditMbServlet</servlet-name>
        <url-pattern>/editMB</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CaServlet</servlet-name>
        <url-pattern>/ca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DelcaServlet</servlet-name>
        <url-pattern>/delca</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditcaServlet</servlet-name>
        <url-pattern>/editca</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
